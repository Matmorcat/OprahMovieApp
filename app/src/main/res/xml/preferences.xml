<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="6"
        android:entries="@array/number_of_pages"
        android:entryValues="@array/number_of_pages_values"
        android:key="number_of_pages"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Set number of movies to be displayed"
        android:title="Number of Movies" />
    <ListPreference
        android:defaultValue="popular"
        android:entries="@array/save_sort"
        android:entryValues="@array/save_sort_values"
        android:key="save_sort"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="Set the default sort"
        android:title="Default Sort" />
</PreferenceScreen>