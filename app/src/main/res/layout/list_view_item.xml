<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/list_view_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/desc_movie_poster"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/list_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/list_view_pic"
        android:layout_toRightOf="@+id/list_view_pic"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_view_text"
        android:layout_centerHorizontal="true"
        android:text="@string/button_favorites_remove"
        android:textSize="16sp" />


</RelativeLayout>